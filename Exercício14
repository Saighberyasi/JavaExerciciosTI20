import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {
    
    System.out.printf("Insira o peso do prato em quilos: ");
    
    Scanner Var = new Scanner(System.in);
    float Peso = Var.nextFloat();

    float Valor = (Peso * 12);
    
    System.out.printf("O preço do prato é de %.2f", Valor);
    
  }
  
}
