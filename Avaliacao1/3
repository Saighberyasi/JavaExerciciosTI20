import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    try(Scanner Var = new Scanner(System.in)){

      System.out.printf("Insira sua idade em anos: ");

      int IdadeAnos = Var.nextInt();

      int IdadeFinal = (IdadeAnos * 365);

      System.out.printf("Sua idade em dias Ã© %d.\n ", IdadeFinal);

    }
  }
}
