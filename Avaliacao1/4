import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    try(Scanner Var = new Scanner(System.in)){

      System.out.printf("Insira a quantidade de frangos da granja: ");

      int Frangos = Var.nextInt();

      float DireitoValor = (Frangos * 4);
      float Esquerdo = (Frangos * 2);
      double EsquerdoValor = (Esquerdo * 3.5);
      double ValorFinal = (DireitoValor + EsquerdoValor);

      System.out.printf("O valor gasto pela granja Ã© de %.2f ", ValorFinal);
 

    }
  }
}
