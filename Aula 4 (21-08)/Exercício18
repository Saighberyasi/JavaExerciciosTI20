import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {

    Scanner Var = new Scanner(System.in);
   
        System.out.printf("Insira o primeiro valor: ");
        int Num1 = Var.nextInt();

        System.out.printf("Insira o segundo valor: ");
        int Num2 = Var.nextInt();

        System.out.printf("Insira o terceiro valor: ");
        int Num3 = Var.nextInt();

        System.out.printf("Insira o quarto valor: ");
        int Num4 = Var.nextInt();

        int Min = Math.min(Math.min(Num1, Num2), Math.min(Num3, Num4));
        int Max = Math.max(Math.max(Num1, Num2), Math.max(Num3, Num4));

        System.out.printf("O maior valor é %d e o menor valor é %d", Max, Min);
    }
}
