// Desenvolva um algoritmo em Java que leia um número inteiro e imprima o seu
// antecessor e seu sucessor.

import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {

    try(Scanner Var = new Scanner(System.in)){

      System.out.printf("Insira um número inteiro: ");

      int Num = Var.nextInt();

      int NumSuc = (Num + 1);
      int NumAnt = (Num - 1);

      System.out.printf("O seu sucessor é %d e o antecessor é %d.\n", NumSuc, NumAnt);

    }

    }

}
