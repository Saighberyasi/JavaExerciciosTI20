// Faça um programa que peça dois números e verifique (usando if e else) e imprima o maior deles

import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    try(Scanner Var = new Scanner(System.in)){

    System.out.printf("Insira o primeiro número: ");

    int Num1 = Var.nextInt();

    System.out.printf("Insira o segundo número: ");

    int Num2 = Var.nextInt();

    if (Num1 > Num2){

      System.out.printf("O maior número é o %d.\n", Num1);
      
      }

    else{

      System.out.printf("O maior número é o %d.\n", Num2);

   }

  }

 }

}
