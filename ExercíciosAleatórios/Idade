// Faça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e 
// mostre-a expressa em dias. Leve em consideração o ano com 365 dias e o mês com 30. 
// (Ex: 3 anos, 2 meses e 15 dias = 1170 dias.) 

import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {

    try(Scanner Var = new Scanner(System.in)){

    System.out.printf("Insira quantos anos de idade você tem: ");
    
    int Ano = Var.nextInt();

    System.out.printf("Insira quantos meses de idade você tem: ");

    int Mes = Var.nextInt();

    System.out.printf("Insira quantos dias de idade você tem: ");

    int DiaF = Var.nextInt();

    int AnoF = (Ano * 365);
    int MesF = (Mes * 30);
    int IdadeF = (AnoF + MesF + DiaF);

    System.out.printf("Você tem %d dias de idade.", IdadeF);

        }

    }

}
